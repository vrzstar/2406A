fun main() {
 //Laços de repetição - Loops
 //
 //  repeat - repita
 //  while  - enquanto
 //  do...while - faça...enquanto
 //  for - para
 //  
 //repeat - repita
 //vai repetir uma determinada  ação ou determinada quantidade de vezes
 //
 //Estrutura do repeat
 //
 // repeat(númeroVezes){
 // ação
 // }
 // 
 /*
 repeat(8){
     println("isso é um teste, testando, testando")
 }
 
 var Apartamento = 1 
    
 repeat(15){
     println(Apartamento ++)
     
 }
 */
 
 //Laço while - enquanto
 //
 // enquanto uma condição for verdadeira, uma determinada ação estará sendo executada
 // Estrutura do while
 // 
 // while(condição)
 // ação
 // }
 
    var contador = 0 
    while(contador < 10){
    println(contador++)
    
    } 
    
    
    
    
    
    
    
    
    
    
    
}
    
    
===============================================================================================================================================//
fun main() {
   //Laços de repetição - Loops
 //
 //  repeat - repita
 //  while  - enquanto
 //  do...while - faça...enquanto
 //  for - para
 //  
 //repeat - repita
 //vai repetir uma determinada  ação ou determinada quantidade de vezes
 //
 //Estrutura do repeat
 //
 // repeat(númeroVezes){
 // ação
 // }
 // 
 /*
 repeat(8){
     println("isso é um teste, testando, testando")
 }
 
 var Apartamento = 1 
    
 repeat(15){
     println(Apartamento ++)
     
 }
 */
 
 //Laço while - enquanto
 //
 // enquanto uma condição for verdadeira, uma determinada ação estará sendo executada
 // Estrutura do while
 // 
 // while(condição)
 // ação
 // }
 
/*
    var contador = 0 
    while(contador < 10){
    println(contador++)
    
    } 
    
    var bateria = 100 
    
    while(bateria > 0){ 
        println("$bateria%") 
        
    when(bateria){
        15 -> {println("Aparelho descarregando conecte no carregador!")}
        0 -> {println("Aparelho desligando!")}
    }
    bateria--
    }
   */
    
    // while -> Enquanto uma determinada ação for verdadeira, uma determinada ação será executada. 
    
   // do...while
   // 
   // uma determinada ação será executada, enquanto uma determinada condição for verdadeira
   
   //Estrutura: 
   //
   //do{ 
   //ação 
   // }while(condição)
  
  /*
  var contador = 0 
  do{
      println(contador++)
  }while(contador > 10)
  */  
 
  //for - para
  //para cada item em um intervalo ou colection, uma determinada ação será executada
  //
  //estrutura:
  //
  //for(vAuxiliar in inrvalo colection)
  //ação
  //} 
  //
 
 for(pneu in 1..4){
     println("$pneu")
 }   
    
 ===========================================================================================================================================================//
 fun main() {
    //for - para
  //para cada item em um intervalo ou colection, uma determinada ação será executada
  //
  //estrutura:
  //
  //for(vAuxiliar in inrvalo colection)
  //ação
  //} 
  //
 
 /*
 for(pneu in 1..4){
     println("$pneu")
 }   
 */   
 
  /*
 var valor = 3 
 for(tabuada in 1..10)   
  println(valor * tabuada)
 */ 
 
  
  //colections
  //
  //intervalos, listas, arrays, vetores etc
  
  //tipos de listas
  //
  var list1 = listOf("tartaruga", 0, 0.1, true)
    
  println(list1) // exibir lista
  println(list1.size) // retorna tamanho da lista
  println(list1.lastIndex) // retornar o último index 
  println(list1[2]) // exibir o valor de um determinado index
  println(list1.contains("Tartaruga")) // compara se existe um determinado valor a lista
  println(list1.indexOf(0)) // indica o index de um determinado valor
  println(list.first()) // o valor do primeiro index 
  println(list.last()) // o valor do último index 
  println(list1.isEmpty()) // compara se a lista está vazia
  
  //<tags> 
  var list2 = listOf<String>("LeBron James", "Stephen Curry", "Michael Jordan", "Pernaa Longa", "Klay Thompson")
  // Lista acima especifica o tipo mde dados que vai ser guardado 
  //
  //   Obs. listof() -> imutável
  //   próxima aula....
    
    
    
    
    
}
    
    
    
    
    
    

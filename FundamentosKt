 fun main() {
    
    //Operadores Matemáticos
    
    // + -> adição
    // - -> subtração
    // / -> divisão
    // * -> multiplicação
    // % -> módulo - resto da divisão
    // 
    var halls = 7 
    var freegells = 6 
    
    println(halls / freegells)
    */
    //EXERCÍCIO - faça uma calculadora que contenha cada um dos operadores matemáticos
    //com o resultado do calculo de duas variaveis (contendo resultado para +,-,/,* e %),
    //contendo também uma interface simples e bem bonita
    
    
  var amoregelato = 27
  var DaisyJones = 31
    
  println (amoregelato + DaisyJones) 
  println (amoregelato - DaisyJones)
  println (amoregelato / DaisyJones) 
  
}
